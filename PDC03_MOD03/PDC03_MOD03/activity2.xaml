<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDC03_MOD03.activity2">
    <ContentPage.Content>
        
        <StackLayout Margin="30" Orientation="Horizontal">

            <Frame BorderColor="Black" Padding="5">
                <StackLayout Orientation="Horizontal">

                    <BoxView Color="Red"></BoxView>
                    <Label Text="Red" FontSize="Large" HorizontalOptions="Center"/>

                </StackLayout>
            </Frame>

            <Frame BorderColor="Black" Padding="5" HasShadow="True">

                <StackLayout Orientation="Horizontal">
                    <BoxView Color="Green"></BoxView>
                    <Label Text="Green" FontSize="Large" HorizontalOptions="Center"/>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>